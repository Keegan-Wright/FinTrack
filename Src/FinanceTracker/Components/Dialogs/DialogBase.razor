@typeparam TResponse

<MudDialog>
    <TitleContent>@Title</TitleContent>
    <DialogContent>
        @Content
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@CancelButtonText</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit">@SubmitButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter] [EditorRequired] public required string Title { get; set; }

    [Parameter] [EditorRequired] public required RenderFragment Content { get; set; }

    [Parameter] [EditorRequired] public required Func<TResponse> ResponseConstructor { get; set; }

    private const string SubmitButtonText = "OK";
    private const string    CancelButtonText = "Cancel";

    internal void Submit()
    {
        MudDialog.Close(DialogResult.Ok(ResponseConstructor.Invoke()));
    }

    internal void Cancel()
    {
        MudDialog.Cancel();
    }


}
