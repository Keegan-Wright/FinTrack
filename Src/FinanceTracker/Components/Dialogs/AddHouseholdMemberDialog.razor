@using FinanceTracker.Models.Request.HouseholdMember
<DialogBase TResponse="AddHouseholdMemberRequest" Title="Add Household member" ResponseConstructor="BuildResponseModel">
    <Content>
        <MudGrid>
            <MudItem xs="6">
                <MudTextField @bind-Value="FirstName" Label="First Name" Placeholder="First Name"></MudTextField>
            </MudItem>
            <MudItem xs="6">
                <MudTextField @bind-Value="Lastname" Label="Last Name" Placeholder="Last Name"></MudTextField>
            </MudItem>
            <MudItem xs="6">
                <MudTextField T="decimal" @bind-Value="Income" Label="Income" Placeholder="Income"></MudTextField>
            </MudItem>
        </MudGrid>
    </Content>
</DialogBase>

@code {

    private string FirstName { get; set; } = string.Empty;
    private string Lastname { get; set; } = string.Empty;
    private decimal Income { get; set; }

    private AddHouseholdMemberRequest BuildResponseModel()
    {
        return new AddHouseholdMemberRequest
        {
            FirstName = FirstName,
            LastName = Lastname,
            Income = Income
        };
    }

}
