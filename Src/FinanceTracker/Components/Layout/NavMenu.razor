@implements IDisposable

@inject NavigationManager NavigationManager

<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
    <MudNavLink Href="ProviderSetup" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.AccountBox">Setup Provider</MudNavLink>
    <MudNavLink Href="YourAccounts" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.AccountBalance">Your Accounts</MudNavLink>
    <MudNavLink Href="YourTransactions" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Money">Your Transactions</MudNavLink>
    <MudNavLink Href="HouseholdMembers" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.House">Your Household</MudNavLink>
    <MudNavLink Href="Classifications" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Tag">Classifications / Tags</MudNavLink>
</MudNavMenu>
@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

}